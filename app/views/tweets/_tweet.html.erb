<div id="<%= dom_id tweet %>">

  <div style="border:2px solid #dfcaca;margin:20px auto;padding:1em;width:90%;background-color:#fff">
    <div style="float:left;width:95px;margin-top:0.5em;text-align:center">
      <span style="font-weight:bold;color:#c71585;font-size:1.5em"><%= tweet.likes%></span><br><span style="font-size:9pt">people like this</span><br>
      <h3><%= button_to 'Like', like_tweet_path(tweet), method: :put %></h3>
      </div>
      <div style="border-left:2px solid #dfcaca;margin-left:115px;padding-left:1.1em">
        <h4><em><%= tweet.author %></em>@ <%= tweet.created_at.strftime("%H:%M")%></h4>
        <p><%= tweet.content %></p>
    </div>
  </div>
</div>
